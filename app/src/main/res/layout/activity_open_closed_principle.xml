<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".openclosedprinciple.OpenClosedPrincipleActivity">

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editTextNumber1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Input radius or length"
            android:inputType="numberDecimal"/>

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editTextNumber2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAreaCircle"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Area Circle"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAreaRectangle"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Area Rectangle"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewResult"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

</androidx.appcompat.widget.LinearLayoutCompat>